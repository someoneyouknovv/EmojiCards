<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmojiCards.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True" >
                <Setter Property="BackgroundImageSource" Value="background.jpg" />
                <Setter Property="Padding" Value="15,20,15,20"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="FontSize" Value="Body"/>
                <Setter Property="Margin" Value="50,0,50,0"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>

            <Color x:Key="EmojiCardsPink">#ff5994</Color>
            <Color x:Key="EmojiCardsOrange">#ff9668</Color>
            <Color x:Key="EmojiCardsYellow">#edff8f</Color>
            <Color x:Key="EmojiCardsGreen">#84ff9f</Color>
            <Color x:Key="EmojiCardsBlue">#82b6ff</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>


